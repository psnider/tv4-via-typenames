{
    "version": "1.5.3",
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "isolatedModules": false,
        "jsx": "react",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "compileOnSave": false
    },
    "filesGlob": [
        "./typings/**/*.d.ts",
        "./src/**/ts/*.ts",
        "./test/**/ts/*.ts",
        "!./node_modules/**/*"
    ],
    "files": [
        "./typings/chai/chai.d.ts",
        "./typings/es6-promise/es6-promise.d.ts",
        "./typings/mocha/mocha.d.ts",
        "./typings/node/node.d.ts",
        "./typings/tsd.d.ts",
        "./typings/tv4-via-typenames/tv4-via-typenames.d.ts",
        "./typings/tv4/tv4.d.ts",
        "./src/ts/tv4-via-typenames.ts",
        "./test/src/ts/tv4-via-typenames.tests.ts"
    ]
}
